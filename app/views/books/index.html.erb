<body class="index_page">
  <div class="notice">
    <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>
  </div>
  <h1>Books</h1>
    <table class="book_list">
      <thead>
        <tr class="book-th">
          <th>Title</th>
          <th>Body</th>
          <td colspan="3"></td>
        </tr>
      </thead>

      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td>
            <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>


  <h2>New book</h2>

  <% if @book.errors.any? %>
  <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="new-book">
  	<%= form_for(@book) do |f| %>
  		<div class="field">
	    <%= f.label :title %>
	    <%= f.text_field :title %>
	    <% if @book.errors.include?(:title) %>
		<% end %>
		</div>
	    <%= f.label :body %>
	    <%= f.text_area :body %>
		<% if @book.errors.include?(:body) %>
		<% end %>


	    <div class="action">
	    <%= f.submit 'Create Book' %>
	    </div>
	    <% end %>
	  </div>
	
</body>


