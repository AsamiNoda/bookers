<body class="edit_page">

  <h1>Editing Book</h1>
	<% if @book.errors.any? %>
	  <div id="error_explanation">
	      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
	    </h2>
	    <ul class="error_msg">
	      <% @book.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>

  <%= form_for(@book) do |f| %>
    <div>
    <%= f.label :title %>
	<%= f.text_field :title %>
    <% if @book.errors.include?(:title) %>
		<% end %>
	</div>
	<div class="body_field">
    <%= f.label :body %>
	<%= f.text_area :body %>
    <% if @book.errors.include?(:body) %>
		<% end %>
	</div>
    <div class="action">
    	<p class="action_button"><%= f.submit 'Update Book' %></p>
    </div>

    <div>
        <p class="button"><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></p>
    </div>
  <% end %>

</body>